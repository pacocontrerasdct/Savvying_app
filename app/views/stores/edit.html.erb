<div id="container-edit">
  <div class="row">
    <div class="small-2 large-2 columns">

    </div>
    <div class="small-8 large-6 columns">
      <%= form_for @store do |form| %>
        <div class="row">
          <div class="large-12 columns">
            <%= form.label "Store Name" %>
            <%= form.text_field :name_store %>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <%= form.label "Description" %>
            <%= form.text_area :description_store, :placeholder => "Write something about the facilities, employees...", title: 'Write something about the facilities, employees...', size: "100%x5%" %>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <%= form.label "Address" %>
            <address><%= form.text_field :post_code, placeholder: "413 Hoe St E17 9AP London", title: '413 Hoe St E17 9AP London', id: 'new-address' %></address>
          </div>
        </div> 
        <div class="row"> 
          <div class="large-6 columns">
            <%= form.label "Phone" %>
            <%= form.text_field :phone, :placeholder => "07123456789", title: '07123456789' %>
          </div>
          <div class="large-6 columns">
            <%= form.label "Opening hours" %>
            <%= form.text_field :open_hours, :placeholder => "08:00-18:00", title: '08:00-18:00' %>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <%= form.submit 'Update', class: "button tiny" %>
            <%= link_to 'Cancel', store_path, class: "button tiny" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="small-2 large-6 columns">
      <%= image_tag "https://s3-eu-west-1.amazonaws.com/savvying-app/old_wharehouse.jpg", size: "400x280" %>
    </div>
  </div>
</div>