<% @num = 1 %>
<% @stores.each do |store| %>

<li>
  <dl>
    <dt><%= @num %>. <%= store.name %></dt>
    <dd>Description: <%= store.description %></dd>
    <dd>Phone:</dd><dd><%= store.phone %></dd>
    <dd>Opening Hours:</dd><dd><%= store.open_hours %></dd>
    <dd>Location:</dd><dd><%= store.post_code %></dd>
    <dd><button id="<%= @num %>" value="<%= store.post_code %>" name="<%= store.post_code %>" >Map</button></dd>
  </dl>
</li>
<% @num += 1 %>
<% end %>