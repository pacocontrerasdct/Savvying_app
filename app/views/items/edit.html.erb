<div id="container-edit">
  <%= form_for @item do |form| %>
    <div class="row">
      <div class="large-12 columns">
        <%= form.label "Product Name" %>
        <%= form.text_field :name %>
      </div>
    </div>
    <div class="row">
      <div class="large-4 columns">
        <%= form.label "Category" %>
        <%= form.select("category", Item.all.order('category ASC').map {|p| [ p.category ] }, {select: :category}) %>
      </div>
      <div class="large-4 columns">
        <%= form.label "Store" %>
        <%= form.select(:store_id, Store.all.order('name ASC').map {|p| [ p.name ]}) %>
      </div>
      <div class="large-4 columns">
        <%= form.label "Price" %>
        <%= form.text_field :price %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <%= form.label "Description" %>
        <%= form.text_field :description %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <%= form.label "Current Picture, select a different one if needed" %>
        <%= image_tag @item.image %>
        <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg', class: 'button-form' %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <%= form.submit 'Update', :class => "button" %>
      </div>
    </div>
  <% end %>
</div>